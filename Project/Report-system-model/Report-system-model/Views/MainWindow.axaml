                                    BorderThickness="1,1,1,1">
                                <TextBlock Text="Полное наименование" HorizontalAlignment="Center" FontSize="12" />
                            </Border>
                            <Border Grid.Row="0" Grid.Column="1" Padding="5" BorderBrush="Black"
                                    BorderThickness="0,1,1,1">
                                <TextBlock Text="Краткое наименование" HorizontalAlignment="Center" FontSize="12" />
                            </Border>
                            <Border Grid.Row="0" Grid.Column="2" Padding="5" BorderBrush="Black"
                                    BorderThickness="0,1,1,1">
                                <TextBlock Text="Статус данных" HorizontalAlignment="Center" FontSize="12" />
                            </Border>
                        </Grid>
                    </Border>
