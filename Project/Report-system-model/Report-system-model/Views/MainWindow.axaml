        <TabControl Margin="5" TabStripPlacement="Left">
            <TabItem Header="Показатели" FontSize="16">
                <Grid>
                    <StackPanel Grid.Row="0">
                        <CheckBox Command="{Binding IsFullNameCheckBoxChecked, Mode = TwoWay}"
